@model Mishutki.Admin.Models.LoginViewModel

@{
    ViewBag.Title = "Admin: Log in";
    Layout = "~/Views/Shared/_LogLayout.cshtml";
}

<div id="login-container">
    <div class="login-title text-center">
        <h1><strong>Вход</strong></h1>
    </div>
    <div class="block push-bit">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "form-login", @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                <div class="col-xs-12">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        @Html.TextBoxFor(m => m.Email, new { id = "login-email", @class = "form-control input-lg", @placeholder = "Логин" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-asterisk"></i></span>
                        @Html.PasswordFor(m => m.Password, new { id = "login-password", @class = "form-control input-lg", @placeholder = "Пароль" })
                    </div>
                </div>
            </div>
            <div class="form-group form-actions">
                <div class="col-xs-4">
                    <label title="" data-toggle="tooltip" class="switch switch-primary" data-original-title="Remember Me?">
                        <input type="checkbox" checked="" name="login-remember-me" id="login-remember-me">
                        <span></span>
                    </label>
                </div>
                <div class="col-xs-8 text-right">
                    <button class="btn btn-sm btn-primary" type="submit"><i class="fa fa-angle-right"></i> Войти</button>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12 text-center">
                    2014 © Mishutki.ru
                </div>
            </div>
        }
    </div>
</div>
<script>$(function () { Login.init(); });</script>